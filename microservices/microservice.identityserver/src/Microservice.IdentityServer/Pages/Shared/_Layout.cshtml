@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment hostingEnv
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />

    <title>Duende IdentityServer</title>
    
     @if (@hostingEnv.IsProduction())
    {
        <link rel="icon" type="image/x-icon" href="~/api-identity/favicon.ico" />
        <link rel="shortcut icon" type="image/x-icon" href="~/api-identity/favicon.ico" />

        <link rel="stylesheet" href="~/api-identity/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/api-identity/lib/bootstrap4-glyphicons/css/bootstrap-glyphicons.min.css" />
        <link rel="stylesheet" href="~/api-identity/css/site.css" />
    }
    else
    {
        <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
        <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap4-glyphicons/css/bootstrap-glyphicons.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    }
</head>
<body>
    <partial name="_Nav" />
   
    <div class="container body-container">
        @RenderBody()
    </div>

    
    @if (@hostingEnv.IsProduction())
    {
        <script src="~/api-identity/lib/jquery/dist/jquery.slim.min.js"></script>
        <script src="~/api-identity/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    }
    else
    {
        <script src="~/lib/jquery/dist/jquery.slim.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    }
   

    @RenderSection("scripts", required: false)
</body>
</html>
